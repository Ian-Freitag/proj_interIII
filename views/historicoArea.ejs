    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Agromap Website</title>

    <script src="https://kit.fontawesome.com/26d4a64054.js" crossorigin="anonymous"> </script>

  </head>

  <body>
        <!--Header-->
        <div id="header">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light justify-content-between">
                    <a class="navbar-brand" href="#">
                        <img src="assets/logo.jpg" width="150" height="150" class="img-fluid">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" href="#"> Home </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="#"> Sair </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!--Usuário-->
        <div class="container pt-5">
            <div class="row">
                <div class="col-sm-6 ola">
                    <h1>Olá, <b>usuário</b></h1>
                </div>
            </div>
             </div>
                <div class="container pt-5">
                    <div class="row">
                        <div>
                            <h2>Minhas áreas</h2>
                        </div>
                    </div>
                </div>
                        <div class="container pt-5">
                            <div class="row">
                                <div>
                            <h6>Cadastrar nova área</h6>
                        </div>  
                    </div>
                </div>
                        <div class="container pt-5">
                            <div class="row">
                                <div>
                                <h6>Acompanhar áreas ativas</h6>
                                <p><i>Você possui 2 áreas ativas</i></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           
          
        <div id="cadastrar" class="block">
            <form>
                <div class="container pt-5">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2><i class="far fa-hand-pointer"></i> Histórico de áreas controladas</h2>
                            <div class="mapa">
                                <p>Selecione a área do mapa que deseja acompanhar</p>
                            </div>
                            <img src="https://cdn2.downdetector.com/static/uploads/c/300/b221f/download-1_GkXwi2F.png" class="displayed">
                        </div>
                        
                        <div class="col-sm-6 ">
                            <div class="mb-3">
                                <label for="InputCultura" class="form-label ajuste"> Visualizar área por cultura: </label>
                                <input type="text" class="form-control" id="InputArea">
                            </div>
                            
                            <div class="mb-3">
                                <label for="InputCultura" class="form-label ajuste"> Visualizar área por praga: </label>
                                <input type="text" class="form-control" id="InputArea">
                            </div>
                            
                            <button type="button" class="btn btn-primary button button-primary">VISUALIZAR</button>
                            
                            <div class="ajustes">                              
                              <h2><i class="far fa-edit"></i>  Dados da área selecionada </h2>
                            </div>
                            
                            <div class="mb-3">
                                <label for="InputArea" class="form-label ajuste"> Identificação da área: </label>
                                <input type="text" class="form-control" id="InputArea">
                            </div>
                            
                            <div class="mb-3">
                                <label for="InputCultura"class="form-label ajuste"> Cultura: </label>
                                <input type="text" class="form-control" id="InputCultura">
                            </div>
                            
                            <div class="mb-3">
                                <label for="InputPraga"class="form-label ajuste"> Praga, erva ou doença: </label>
                                <input type="text" class="form-control" id="InputPraga">
                            </div>

                            <div class="mb-3">
                                <label for="InputDate"class="form-label ajuste"> Data de início da praga: </label>
                                <input type="text" class="form-control" id="InputDate">
                            </div>

                            <div class="mb-3">
                                <label for="InputDate"class="form-label ajuste"> Data de controle: </label>
                                <input type="text" class="form-control" id="InputDate">
                            </div>

                            <div class="mb-3">
                                <label for="InputTratamento"class="form-label ajuste"> Tratamento utilizado: </label>
                                <input type="text" class="form-control" id="InputTratamento">
                            </div>
                            <button type="button" class="btn btn-primary button button-primary" >SALVAR</button>
                        </div>
                    </div>                     
                </div>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="js/main.js"></script>
 </body>
</html>